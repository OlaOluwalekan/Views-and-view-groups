<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:id="@+id/Main_Layout"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/sub_main_layout"
		android:layout_weight="1.0"
		android:gravity="center"
		android:padding="10dp"
		android:background="#FFFFFF">

		<ImageView
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:id="@+id/img_logo"
			android:src="@drawable/logo">

		</ImageView>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/lnr_email"
			android:padding="10dp"
			android:layout_marginBottom="3dp"
			android:gravity="center"
			android:background="@drawable/cus_edt">

			<ImageView
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:id="@+id/img_email"
				android:src="@drawable/email_image">

			</ImageView>

			<EditText
				android:layout_width="match_parent"
				android:ems="10"
				android:layout_height="wrap_content"
				android:id="@+id/edt_email"
				android:padding="10dp"
				android:hint="Email"
				android:inputType="textEmailAddress"
				android:background="#FFFFFF"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/lnr_pass"
			android:padding="10dp"
			android:layout_marginTop="3dp"
			android:gravity="center"
			android:background="@drawable/cus_edt">

			<ImageView
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:id="@+id/img_pass"
				android:src="@drawable/pass_image">

			</ImageView>

			<EditText
				android:layout_width="match_parent"
				android:ems="10"
				android:layout_height="wrap_content"
				android:id="@+id/edt_pass"
				android:padding="10dp"
				android:hint="Password"
				android:layout_weight="1.0"
				android:inputType="textPassword"
				android:background="#FFFFFF"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/lnr_switch"
			android:gravity="right|center"
			android:padding="0dp"
			android:layout_marginTop="0dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Show password"
				android:padding="0dp"/>

			<Switch
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/switch1"
				android:checked="false"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/lnr_btn"
			android:paddingTop="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp">

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Exit"
				android:id="@+id/btn_exit"
				android:background="@drawable/cus_btn"/>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/lnr_btn2"
				android:gravity="right">

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Login"
					android:id="@+id/btn_login"
					android:background="@drawable/cus_btn"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Powered by:"
			android:textStyle="bold"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center">

			<ImageView
				android:layout_width="50dp"
				android:layout_height="30dp"
				android:id="@+id/img_zuri"
				android:src="@drawable/zuri_logo"
				android:layout_marginRight="2dp">

			</ImageView>

			<ImageView
				android:layout_width="50dp"
				android:layout_height="30dp"
				android:id="@+id/img_i4g"
				android:src="@drawable/i4g_logo"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp">

			</ImageView>

			<ImageView
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:id="@+id/img_hng"
				android:src="@drawable/hng_logo"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp">

			</ImageView>

			<ImageView
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:id="@+id/img_slack"
				android:src="@drawable/slack_logo"
				android:layout_marginLeft="2dp">

			</ImageView>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

